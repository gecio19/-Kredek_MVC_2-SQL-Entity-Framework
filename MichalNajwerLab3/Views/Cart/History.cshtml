@model IEnumerable<MichalNajwerLab3.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<h1>Historia zamówień:</h1>

<table class="table">
    <thead>
    <tr>
        <th>Data</th>
        <th>Numer</th>
        <th>Miasto</th>
        <th>Adres</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>
                    @order.Date
                </td>
                <td>
                    @order.Phone
                </td>
                <td>
                    @order.City
                </td>
                <td>
                    @order.Address
                </td>
                <td>
                    @Html.ActionLink("Szczegóły", "OrderDetails", new { id = order.Id })
                </td>
            </tr>
        }
    </tbody>
</table>